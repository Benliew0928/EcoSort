<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ==================== PERMISSIONS ==================== -->
    <!-- ======== INTERNET ======== -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <!-- ======== LOCATION & MAP ======== -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.huawei.appmarket.service.commondata.permission.GET_COMMON_DATA"/>

    <!-- ======== CAMERA ======== -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- ======== STORAGE ======== -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"
        tools:replace="android:maxSdkVersion" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- Note: FOREGROUND_SERVICE_MICROPHONE is often implied by FOREGROUND_SERVICE -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- ==================== FEATURES ==================== -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />

    <application
        android:name=".EcoSortApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcoSort"
        tools:targetApi="31">

        <!-- ==================== HUAWEI MOBILE SERVICES (HMS) CONFIGURATION ==================== -->
        <!--
             FIX 1: Use the recommended com.huawei.hms.maps.API_KEY or com.huawei.hms.client.appid
             The tag com.huawei.hms.client.api_key is generally outdated or used differently.
             If you are using Map Kit, use the maps-specific tag.
             I will comment out your original for reference and use the standard Map Kit tag:
        -->
        <!-- <meta-data
            android:name="com.huawei.hms.client.api_key"
            android:value="DgEDALFQCT2z6SbgMBCF84yhsZnr8RYPkoILZbwIuYoIMO5ZhdqwMo7eVLUeEey0qoFkFjZQDhRUjoahAr+qtdLH4p+OdQgK/hkWng==" /> -->

        <!-- REQUIRED: Standard Map Kit API Key Meta-data -->
        <meta-data
            android:name="com.huawei.hms.maps.API_KEY"
            android:value="DgEDALFQCT2z6SbgMBCF84yhsZnr8RYPkoILZbwIuYoIMO5ZhdqwMo7eVLUeEey0qoFkFjZQDhRUjoahAr+qtdLH4p+OdQgK/hkWng==" />

        <!-- AGConnect App ID is often read from the agconnect-services.json file,
             but if manually defined, use the standard tag: -->
        <!-- <meta-data
            android:name="com.huawei.hms.client.appid"
            android:value="YOUR_APP_ID_HERE" /> -->

        <!-- ==================== GOOGLE SIGN-IN CONFIGURATION ==================== -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- ==================== ACTIVITIES ==================== -->

        <!-- SPLASH ACTIVITY (LAUNCHER) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MAIN ACTIVITY -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Other Activities -->
        <activity android:name=".ui.login.LoginActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".ui.login.GoogleUsernameActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".ObjectDetectionActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".AnalysisResultActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".RecyclingSuccessActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".ResultActivity" android:exported="false" android:screenOrientation="portrait" />

        <!-- Admin Activities -->
        <activity android:name=".ui.admin.AdminActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".ui.admin.UserManagementActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".ui.admin.AdminManagementActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".ui.admin.CommunityManagementActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".ui.admin.CommunityCommentsManagementActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".ui.admin.AdminActionLogsActivity" android:exported="false" android:screenOrientation="portrait" />

        <!-- MapActivity: Use the fully qualified name from the Kotlin file package (com.example.ecosort.MapActivity) -->
        <activity android:name=".hms.MapActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".hms.AddBinActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".hms.BinDetailActivity" android:exported="false" />


        <activity android:name=".UserProfileActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".profile.EditProfileActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".profile.UserProfileViewActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".profile.PrivacySettingsActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".preferences.UserPreferencesActivity" android:exported="false" android:screenOrientation="portrait" />
        
        <!-- Friend System Activities -->
        <activity android:name=".friends.FriendSearchActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".friends.FriendRequestsActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".friends.FriendsListActivity" android:exported="false" android:screenOrientation="portrait" />

        <!-- Social Activities -->
        <activity android:name=".social.FollowingListActivity" android:exported="false" android:screenOrientation="portrait" />

        <!-- CHAT ACTIVITIES -->
        <activity android:name=".chat.ChatListActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".chat.UserSearchActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".chat.ChatActivity" android:exported="false" android:screenOrientation="portrait" />

        <!-- COMMUNITY ACTIVITIES -->
        <activity android:name=".community.CommunityFeedActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".community.CreatePostActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".community.PostDetailActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".community.VideoPlayerActivity" android:exported="false" android:screenOrientation="portrait" />
        <activity android:name=".community.CommentActivity" android:exported="false" android:screenOrientation="portrait" />

        <!-- RECYCLED ITEMS ACTIVITIES -->
        <activity android:name=".recycled.RecycledItemActivity" android:exported="false" android:screenOrientation="portrait" />

        <!-- POINTS ACTIVITIES -->
        <activity android:name=".points.PointsActivity" android:exported="false" android:screenOrientation="portrait" />

        <!-- ==================== FILE PROVIDER ==================== -->
        <!-- FIX 2: Removed the redundant second FileProvider block. Only one is needed. -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
