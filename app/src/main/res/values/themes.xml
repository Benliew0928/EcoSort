<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EcoSort" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>

        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/background_white</item>

        <item name="textAppearanceTitleLarge">@style/TextSubheading</item>

        <item name="textAppearanceBodyLarge">@style/TextBody</item>

        <item name="textAppearanceLabelSmall">@style/TextCaption</item>

        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextSubheading</item>
        <item name="titleTextColor">@color/light_bg</item>
    </style>
</resources>