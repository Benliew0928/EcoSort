<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    tools:context=".CameraActivity">

    <!-- Modern Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/background_white"
        android:elevation="2dp">

        <Button
            android:id="@+id/btnBackCamera"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="â† Back"
            android:textSize="14sp"
            android:background="@drawable/button_secondary"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tvCameraTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI Scan â€¢ Recyclable Detector"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@string/font_family_primary" />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp" />
    </LinearLayout>

    <!-- Camera Preview Area -->
    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:layout_margin="16dp"
        android:elevation="4dp">

        <!-- Camera overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“·"
                android:textSize="48sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera Preview"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@color/card_shadow"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Scan frame overlay -->
        <View
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/primary_green_light"
            android:alpha="0.3" />
    </FrameLayout>

    <!-- Camera Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/background_white"
        android:elevation="2dp">

        <!-- Status indicators -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto-detect"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/button_secondary"
                android:padding="8dp" />

            <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flash: Auto"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/button_secondary"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Capture button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnSnap"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ðŸ“¸"
                android:textSize="24sp"
                android:background="@drawable/button_primary"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Last Scan Result Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_modern"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="ðŸ¥¤"
            android:textSize="32sp"
            android:background="@color/surface_light" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tvLastScanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plastic Bottle"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvLastScanInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prediction: Recyclable â€¢ Confidence: 94%"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnRecycleQuick"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Recycle"
                android:textSize="12sp"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnSellQuick"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Sell"
                android:textSize="12sp"
                android:background="@drawable/button_accent"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>