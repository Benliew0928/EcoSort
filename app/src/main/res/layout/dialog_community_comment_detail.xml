<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="500dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Comment ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment ID"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailCommentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="comment_123"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Author -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailCommentAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author Name"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailCommentContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the full content of the comment..."
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Post ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post ID"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailPostId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="post_123"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Timestamp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commented At"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailCommentTimestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 01, 2024 12:00:00"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Likes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Likes"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailCommentLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
