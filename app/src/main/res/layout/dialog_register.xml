<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Username -->
    <EditText
        android:id="@+id/etRegUsername"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Username"
        android:inputType="text"
        android:background="@drawable/input_field"
        android:padding="12dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvRegUsernameError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/error_red"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- Email -->
    <EditText
        android:id="@+id/etRegEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/input_field"
        android:padding="12dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvRegEmailError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/error_red"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- Password -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp">

        <EditText
            android:id="@+id/etRegPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/input_field"
            android:padding="12dp"
            android:paddingEnd="48dp" />

        <ImageButton
            android:id="@+id/btnToggleRegPassword"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_visibility_off"
            android:contentDescription="Show password"
            android:scaleType="centerInside" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvRegPasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/error_red"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- Confirm Password -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp">

        <EditText
            android:id="@+id/etRegConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:background="@drawable/input_field"
            android:padding="12dp"
            android:paddingEnd="48dp" />

        <ImageButton
            android:id="@+id/btnToggleRegConfirmPassword"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_visibility_off"
            android:contentDescription="Show password"
            android:scaleType="centerInside" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvRegConfirmPasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/error_red"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- User Type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Type"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rgRegUserType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbRegUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbRegAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin" />
    </RadioGroup>

    <!-- Terms and Conditions Checkbox -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <CheckBox
            android:id="@+id/cbRegTermsAndConditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvRegTermsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="I have read and agree to the Terms and Conditions and the Privacy Policy."
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@string/font_family_body"
            android:lineSpacingExtra="2dp" />

        <!-- Hidden TextViews for clickable parts - will be handled programmatically -->
        <TextView
            android:id="@+id/tvRegTermsAndConditions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRegPrivacyPolicy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvRegTermsError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/error_red"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- Register Button -->
    <Button
        android:id="@+id/btnRegisterConfirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Register"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

</LinearLayout>