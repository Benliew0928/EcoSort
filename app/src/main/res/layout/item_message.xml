<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- Message container -->
    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="start">

        <!-- Message content container -->
        <LinearLayout
            android:id="@+id/message_content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/message_bubble_other"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:maxWidth="260dp">

            <!-- Text message -->
            <TextView
                android:id="@+id/text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp"
                android:visibility="gone"
                tools:text="Hello! How are you doing today?" />

            <!-- Image message -->
            <ImageView
                android:id="@+id/image_message"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:src="@drawable/ic_image" />

            <!-- Voice message -->
            <LinearLayout
                android:id="@+id/voice_message_container"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/voice_message_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/voice_play_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_play_arrow"
                    android:background="@android:color/transparent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <!-- Progress bar for voice message -->
                    <ProgressBar
                        android:id="@+id/voice_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginBottom="4dp"
                        android:progress="0"
                        android:max="100"
                        android:progressDrawable="@drawable/voice_progress_bar"
                        android:visibility="gone"
                        android:indeterminate="false" />

                    <!-- Waveform view (static) -->
                    <View
                        android:id="@+id/voice_waveform"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="@drawable/voice_waveform_bg" />

                </LinearLayout>

                <TextView
                    android:id="@+id/voice_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    tools:text="0:15" />

            </LinearLayout>

            <!-- File message -->
            <LinearLayout
                android:id="@+id/file_message_container"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/file_message_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_attach_file" />

                <TextView
                    android:id="@+id/file_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="document.pdf" />

            </LinearLayout>

        </LinearLayout>

        <!-- Message status and time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                tools:text="10:30" />

            <ImageView
                android:id="@+id/message_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                tools:src="@drawable/ic_done_all"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:visibility="gone"
                tools:text="sent"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>