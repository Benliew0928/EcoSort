<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.ChatActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="@dimen/toolbar_elevation">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:titleTextColor="@android:color/black"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_lg"
                android:layout_marginEnd="@dimen/margin_lg">
                
                <ImageView
                    android:id="@+id/imageUserProfile"
                    android:layout_width="@dimen/icon_profile_sm"
                    android:layout_height="@dimen/icon_profile_sm"
                    android:scaleType="centerCrop"
                    android:contentDescription="User profile picture"
                    android:layout_marginEnd="@dimen/margin_md" />
                
                <TextView
                    android:id="@+id/textUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="@dimen/text_xl"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />
                    
            </LinearLayout>
            
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_messages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingStart="@dimen/padding_md"
            android:paddingEnd="@dimen/padding_md"
            android:paddingTop="@dimen/padding_sm"
            android:paddingBottom="@dimen/padding_sm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/input_bar"
            tools:listitem="@layout/item_message" />

        <LinearLayout
            android:id="@+id/input_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_md"
            android:background="@drawable/bg_input_bar"
            android:paddingStart="@dimen/padding_md"
            android:paddingEnd="@dimen/padding_md"
            android:paddingTop="@dimen/padding_sm"
            android:paddingBottom="@dimen/padding_sm"
            android:gravity="center_vertical"
            android:elevation="@dimen/card_elevation_md"
            android:minHeight="@dimen/input_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomNavBar">

            <ImageButton
                android:id="@+id/button_camera"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:background="@android:color/transparent"
                android:contentDescription="Take Photo"
                android:src="@drawable/ic_camera"
                android:padding="@dimen/padding_sm" />

            <ImageButton
                android:id="@+id/button_attach_image"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:background="@android:color/transparent"
                android:contentDescription="Attach Image"
                android:src="@drawable/ic_image"
                android:padding="@dimen/padding_sm" />

            <ImageButton
                android:id="@+id/button_voice_record"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:background="@android:color/transparent"
                android:contentDescription="Record Voice"
                android:src="@drawable/ic_mic"
                android:padding="@dimen/padding_sm" />

            <ImageButton
                android:id="@+id/button_attach_file"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:background="@android:color/transparent"
                android:contentDescription="Attach File"
                android:src="@drawable/ic_attach_file"
                android:padding="@dimen/padding_sm" />

            <EditText
                android:id="@+id/edit_text_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type a message"
                android:maxLines="4"
                android:textSize="@dimen/text_lg"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/button_send"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:background="@android:color/transparent"
                android:contentDescription="Send"
                android:src="@drawable/ic_arrow_forward" />

        </LinearLayout>

        <!-- Bottom Navigation Bar -->
        <include
            android:id="@+id/bottomNavBar"
            layout="@layout/bottom_navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
