<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true"
    tools:context=".ui.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_xl"
        android:gravity="center">

        <!-- Logo Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_top_header"
            android:layout_marginBottom="@dimen/margin_xxxl">

            <ImageView
                android:layout_width="@dimen/icon_profile_xl"
                android:layout_height="@dimen/icon_profile_xl"
                android:src="@drawable/app_logo"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_title"
                android:textSize="@dimen/text_display_lg"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@string/font_family_heading"
                android:layout_marginTop="@dimen/margin_lg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Recycling and Community"
                android:textSize="@dimen/text_lg"
                android:textColor="@android:color/black"
                android:fontFamily="@string/font_family_body"
                android:layout_marginTop="@dimen/margin_sm" />
        </LinearLayout>

        <!-- Login Form Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_modern"
            android:padding="@dimen/padding_xl"
            android:elevation="@dimen/card_elevation_lg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_back"
                android:textSize="@dimen/text_xxxl"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_heading"
                android:layout_marginBottom="@dimen/margin_sm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_to_continue"
                android:textSize="@dimen/text_md"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_body"
                android:layout_marginBottom="@dimen/margin_xxl" />

            <!-- Username Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="@dimen/text_md"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="@dimen/margin_sm" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:minHeight="@dimen/input_min_height"
                android:hint="Enter your username"
                android:padding="@dimen/input_padding"
                android:background="@drawable/input_field"
                android:textSize="@dimen/text_lg"
                android:fontFamily="@string/font_family_body"
                android:inputType="text"
                android:layout_marginBottom="@dimen/margin_xs" />

            <TextView
                android:id="@+id/tvUsernameError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/error_red"
                android:fontFamily="@string/font_family_caption"
                android:layout_marginBottom="@dimen/margin_md"
                android:visibility="gone" />

            <!-- Password Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="@dimen/text_md"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="@dimen/margin_sm" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/margin_xs">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:padding="@dimen/input_padding"
                    android:paddingEnd="@dimen/input_padding_end_with_icon"
                    android:background="@drawable/input_field"
                    android:textSize="@dimen/text_lg"
                    android:fontFamily="@string/font_family_body" />

                <ImageButton
                    android:id="@+id/btnTogglePassword"
                    android:layout_width="@dimen/icon_xl"
                    android:layout_height="@dimen/icon_xl"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_xs"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_visibility_off"
                    android:contentDescription="Show password"
                    android:scaleType="centerInside" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvPasswordError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/error_red"
                android:fontFamily="@string/font_family_caption"
                android:layout_marginBottom="@dimen/margin_lg"
                android:visibility="gone" />

            <!-- User Type Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_type"
                android:textSize="@dimen/text_md"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="@dimen/margin_md" />

            <RadioGroup
                android:id="@+id/rgUserType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_xxl">

                <RadioButton
                    android:id="@+id/rbUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_role"
                    android:textSize="@dimen/text_md"
                    android:fontFamily="@string/font_family_body"
                    android:textColor="@color/text_primary"
                    android:minHeight="@dimen/button_height_md"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbAdmin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/admin_role"
                    android:textSize="@dimen/text_md"
                    android:fontFamily="@string/font_family_body"
                    android:textColor="@color/text_primary"
                    android:minHeight="@dimen/button_height_md" />
            </RadioGroup>

            <!-- Terms and Conditions Checkbox -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_marginBottom="@dimen/margin_lg">

                <CheckBox
                    android:id="@+id/cbTermsAndConditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_sm"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvTermsText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="I have read and agree to the Terms and Conditions and the Privacy Policy."
                    android:textSize="@dimen/text_sm"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@string/font_family_body"
                    android:lineSpacingExtra="2dp" />

                <!-- Hidden TextViews for clickable parts - will be handled programmatically -->
                <TextView
                    android:id="@+id/tvTermsAndConditions"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvPrivacyPolicy"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Action Buttons -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_xl"
                android:minHeight="@dimen/button_height_xl"
                android:text="@string/sign_in"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/margin_md"
                android:elevation="@dimen/card_elevation_md" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_lg"
                android:minHeight="@dimen/button_height_lg"
                android:text="@string/create_account"
                android:textSize="@dimen/text_md"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_secondary"
                android:textColor="@color/white"
                android:elevation="@dimen/card_elevation_sm"
                android:layout_marginBottom="@dimen/margin_lg" />

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_lg">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/text_secondary"
                    android:alpha="0.3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textSize="@dimen/text_sm"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@string/font_family_caption"
                    android:layout_marginStart="@dimen/margin_lg"
                    android:layout_marginEnd="@dimen/margin_lg" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/text_secondary"
                    android:alpha="0.3" />
            </LinearLayout>

            <!-- Google Sign-In Button -->
            <Button
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_lg"
                android:minHeight="@dimen/button_height_lg"
                android:text="Sign in with G"
                android:textSize="@dimen/text_md"
                android:textAllCaps="false"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_primary"
                android:textColor="@android:color/white"
                android:elevation="@dimen/card_elevation_sm"
                android:drawableStart="@drawable/ic_google_logo"
                android:drawablePadding="@dimen/padding_md"
                android:gravity="center"
                android:stateListAnimator="@null" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
