<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Logo Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/button_primary"
                android:gravity="center"
                android:elevation="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_heading" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EcoSort"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_heading"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Recycling &amp; Marketplace"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_body"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Login Form Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_modern"
            android:padding="24dp"
            android:elevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_heading"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in to continue"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_body"
                android:layout_marginBottom="24dp" />

            <!-- Username Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your username"
                android:padding="12dp"
                android:background="@drawable/input_field"
                android:textSize="16sp"
                android:fontFamily="@string/font_family_body"
                android:layout_marginBottom="16dp" />

            <!-- Password Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/input_field"
                android:textSize="16sp"
                android:fontFamily="@string/font_family_body"
                android:layout_marginBottom="20dp" />

            <!-- User Type Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Type"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/rgUserType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/rbUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User"
                    android:textSize="14sp"
                    android:fontFamily="@string/font_family_body"
                    android:textColor="@color/text_primary"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbAdmin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Admin"
                    android:textSize="14sp"
                    android:fontFamily="@string/font_family_body"
                    android:textColor="@color/text_primary" />
            </RadioGroup>

            <!-- Action Buttons -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Sign In"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Create Account"
                android:textSize="14sp"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_secondary"
                android:textColor="@color/text_primary"
                android:elevation="2dp" />
        </LinearLayout>

        <!-- Demo Credentials -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_modern"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demo Credentials"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User: user123 / password123"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin: admin123 / password123"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
