<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".hms.AddBinActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Recycle Bin Submission"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo of Bin:"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/ivPhotoPreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="#EEE"
        android:contentDescription="Photo preview of the recycle bin"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location: Lat/Lng"
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/etBinName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Bin Name/Description"
        android:inputType="textCapSentences"
        android:minHeight="48dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnSubmitBin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT FOR VERIFICATION"
        android:backgroundTint="@color/colorPrimary" />

</LinearLayout>