<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="500dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email@example.com"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- User Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Type"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailUserType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regular User"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Created At -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created At"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 01, 2024 12:00:00"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Last Active -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Active"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailLastActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 01, 2024 12:00:00"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Bio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No bio available"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Profile Image URL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Image URL"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailProfileImageUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No profile image"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
