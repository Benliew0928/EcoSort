<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_sm"
    android:elevation="@dimen/card_elevation_md"
    app:cardCornerRadius="@dimen/card_radius_lg"
    app:cardElevation="@dimen/card_elevation_sm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_md">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_md">

            <ImageView
                android:id="@+id/imageAuthorProfile"
                android:layout_width="@dimen/icon_profile_sm"
                android:layout_height="@dimen/icon_profile_sm"
                android:scaleType="centerCrop"
                android:contentDescription="Author profile picture" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_md">

                <TextView
                    android:id="@+id/textAuthorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author Name"
                    android:textSize="@dimen/text_lg"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/textPostTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h ago"
                    android:textSize="@dimen/text_sm"
                    android:textColor="@color/text_secondary"
                    tools:text="2h ago" />

            </LinearLayout>

            <TextView
                android:id="@+id/textPostType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIP"
                android:textSize="@dimen/text_xs"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/tag_background"
                android:paddingStart="@dimen/padding_sm"
                android:paddingEnd="@dimen/padding_sm"
                android:paddingTop="@dimen/padding_xs"
                android:paddingBottom="@dimen/padding_xs"
                android:gravity="center"
                tools:text="TIP" />

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/textPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Title"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="@dimen/margin_sm"
            tools:text="How to Recycle Plastic Bottles" />

        <!-- Content -->
        <TextView
            android:id="@+id/textPostContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post content goes here..."
            android:textSize="@dimen/text_md"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="@dimen/spacing_xs"
            android:layout_marginBottom="@dimen/margin_md"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="Here are some great tips for recycling plastic bottles effectively..." />

        <!-- Image (if any) -->
        <ImageView
            android:id="@+id/imagePost"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_preview_height"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_md"
            android:contentDescription="Post image"
            tools:visibility="visible"
            tools:src="@drawable/ic_image" />

        <!-- Video Thumbnail (if any) -->
        <FrameLayout
            android:id="@+id/videoThumbnailContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_preview_height"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_md">

            <ImageView
                android:id="@+id/imageVideoThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Video thumbnail" />

            <ImageView
                android:layout_width="@dimen/icon_xxl"
                android:layout_height="@dimen/icon_xxl"
                android:src="@drawable/ic_play_arrow"
                android:layout_gravity="center"
                android:contentDescription="Play video"
                android:background="@android:color/transparent" />

        </FrameLayout>

        <!-- Tags -->
        <LinearLayout
            android:id="@+id/containerTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_md"
            android:orientation="horizontal"
            android:visibility="gone" />

        <!-- Action Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/buttonLike"
                android:layout_width="@dimen/icon_md"
                android:layout_height="@dimen/icon_md"
                android:src="@drawable/ic_favorite_border"
                android:contentDescription="Like"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/textLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/text_md"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="@dimen/margin_xs"
                android:layout_marginEnd="@dimen/margin_lg"
                tools:text="24" />

            <ImageView
                android:id="@+id/buttonComment"
                android:layout_width="@dimen/icon_md"
                android:layout_height="@dimen/icon_md"
                android:src="@drawable/ic_comment"
                android:contentDescription="Comment"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/textCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/text_md"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="@dimen/margin_xs"
                android:layout_marginEnd="@dimen/margin_lg"
                tools:text="5" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/buttonShare"
                android:layout_width="@dimen/icon_md"
                android:layout_height="@dimen/icon_md"
                android:src="@drawable/ic_share"
                android:contentDescription="Share"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imageMore"
                android:layout_width="@dimen/icon_md"
                android:layout_height="@dimen/icon_md"
                android:src="@android:drawable/ic_menu_more"
                android:contentDescription="More options"
                android:layout_marginStart="@dimen/margin_md"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
