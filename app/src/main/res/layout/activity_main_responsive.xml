<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <!-- Scrollable content container -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacing_xxl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavBar">

        <!-- Main content container with responsive constraints -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Modern Header with Gradient -->
            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/button_primary"
                android:padding="@dimen/padding_lg"
                android:paddingTop="@dimen/spacing_xxl"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Header content with responsive layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_lg">

                    <!-- Logo container -->
                    <LinearLayout
                        android:layout_width="@dimen/icon_xxl"
                        android:layout_height="@dimen/icon_xxl"
                        android:background="@color/white"
                        android:gravity="center"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E"
                            android:textColor="@color/primary_green"
                            android:textSize="@dimen/text_xxxl"
                            android:textStyle="bold"
                            android:fontFamily="@string/font_family_heading" />
                    </LinearLayout>

                    <!-- Title and subtitle -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/padding_md">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_title"
                            android:textSize="@dimen/text_xxxl"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@string/font_family_heading" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_subtitle"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/white"
                            android:alpha="0.9"
                            android:fontFamily="@string/font_family_caption" />
                    </LinearLayout>

                    <!-- Profile button -->
                    <ImageView
                        android:id="@+id/btnProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person_24"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <!-- Welcome Message -->
                <TextView
                    android:id="@+id/tvWelcomeMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_message"
                    android:textSize="@dimen/text_xl"
                    android:textColor="@color/white"
                    android:fontFamily="@string/font_family_primary"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_subtitle"
                    android:textSize="@dimen/text_md"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:fontFamily="@string/font_family_body" />
            </LinearLayout>

            <!-- Quick Actions Section -->
            <LinearLayout
                android:id="@+id/quick_actions_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_lg"
                app:layout_constraintTop_toBottomOf="@+id/header_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_actions"
                    android:textSize="@dimen/text_xxl"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@string/font_family_heading"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <!-- First row of buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <Button
                        android:id="@+id/btnScan"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="@string/scan_item"
                        android:textSize="@dimen/text_md"
                        android:textStyle="bold"
                        android:fontFamily="@string/font_family_primary"
                        android:background="@drawable/button_primary"
                        android:textColor="@color/white"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:elevation="4dp" />

                    <Button
                        android:id="@+id/btnFindStations"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="@string/find_stations"
                        android:textSize="@dimen/text_md"
                        android:textStyle="bold"
                        android:fontFamily="@string/font_family_primary"
                        android:background="@drawable/button_accent"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:elevation="4dp" />
                </LinearLayout>

                <!-- Second row of buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnChat"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="@string/chat"
                        android:textSize="@dimen/text_md"
                        android:textStyle="bold"
                        android:fontFamily="@string/font_family_primary"
                        android:background="@drawable/button_secondary"
                        android:textColor="@color/white"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:elevation="2dp" />

                    <Button
                        android:id="@+id/btnCommunity"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="@string/community"
                        android:textSize="@dimen/text_md"
                        android:textStyle="bold"
                        android:fontFamily="@string/font_family_primary"
                        android:background="@drawable/button_secondary"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:elevation="2dp" />
                </LinearLayout>

                <!-- Friends Button Row -->
                <Button
                    android:id="@+id/btnFriends"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/friends"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_primary"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:elevation="2dp" />
            </LinearLayout>

            <!-- Stats Dashboard -->
            <LinearLayout
                android:id="@+id/stats_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_lg"
                android:paddingTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/quick_actions_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_impact"
                    android:textSize="@dimen/text_xxl"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@string/font_family_heading"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Recycled items card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/card_modern"
                        android:padding="@dimen/padding_md"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="♻️"
                            android:textSize="@dimen/text_xxxl"
                            android:layout_marginBottom="@dimen/spacing_sm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/items_recycled"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@string/font_family_caption" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textSize="@dimen/text_display"
                            android:textStyle="bold"
                            android:textColor="@color/primary_green"
                            android:fontFamily="@string/font_family_heading" />
                    </LinearLayout>

                    <!-- Points card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/card_modern"
                        android:padding="@dimen/padding_md"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⭐"
                            android:textSize="@dimen/text_xxxl"
                            android:layout_marginBottom="@dimen/spacing_sm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/points_label"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@string/font_family_caption" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,250"
                            android:textSize="@dimen/text_display"
                            android:textStyle="bold"
                            android:textColor="@color/accent_teal"
                            android:fontFamily="@string/font_family_heading" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Community Feeds Section -->
            <LinearLayout
                android:id="@+id/community_feeds_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_lg"
                android:paddingTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/stats_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/community_feeds"
                        android:textSize="@dimen/text_xxl"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@string/font_family_heading" />

                    <TextView
                        android:id="@+id/featuredViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:textSize="@dimen/text_md"
                        android:textColor="@color/primary_green"
                        android:fontFamily="@string/font_family_primary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/featuredContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Dynamic content will be added here -->
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Sticky Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/background_white"
        android:padding="@dimen/spacing_sm"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/bottomHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nav_home"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@string/font_family_primary"
            android:background="@drawable/button_primary"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bottomScan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nav_scan"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@string/font_family_primary"
            android:background="@drawable/button_secondary"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bottomMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nav_map"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@string/font_family_primary"
            android:background="@drawable/button_secondary"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bottomSell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nav_community"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@string/font_family_primary"
            android:background="@drawable/button_secondary"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
