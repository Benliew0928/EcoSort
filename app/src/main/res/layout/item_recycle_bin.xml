<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_modern"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="2dp"
    android:id="@+id/bin_item_container">

    <ImageView
        android:id="@+id/imgBinPhotoList"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="#EEE"
        android:contentDescription="Photo of the recycle bin"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            tools:text="Real Recycling Hub" />

        <TextView
            android:id="@+id/tvBinDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            tools:text="📍 0.5 km away" />

        <TextView
            android:id="@+id/tvVerificationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/success_green"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            tools:text="✅ Verified" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnVerifyStation"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:text="Verify"
            android:textSize="10sp"
            android:padding="0dp"
            android:visibility="gone"  android:backgroundTint="@color/success_green" />

        <Button
            android:id="@+id/btnDeleteStation"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:text="Delete"
            android:textSize="10sp"
            android:padding="0dp"
            android:visibility="gone"  android:backgroundTint="@color/error_red" />

    </LinearLayout>
</LinearLayout>