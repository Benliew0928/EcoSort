<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="96dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@string/font_family_heading"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- User Management -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_modern"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👥"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Management"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@string/font_family_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View and manage user accounts"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@string/font_family_caption" />
            </LinearLayout>

            <Button
                android:id="@+id/btnUserManagement"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Manage"
                android:textSize="14sp"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>

        <!-- Admin Management -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_modern"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👨‍💼"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Management"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@string/font_family_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage admin accounts and permissions"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@string/font_family_caption" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAdminManagement"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Manage"
                android:textSize="14sp"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>

        <!-- Community Management -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_modern"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💬"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Community Management"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@string/font_family_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage community posts and comments"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@string/font_family_caption" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCommunityManagement"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Manage"
                android:textSize="14sp"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>

        <!-- Action Logs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_modern"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📋"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action Logs"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@string/font_family_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View admin action history and audit logs"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@string/font_family_caption" />
            </LinearLayout>

            <Button
                android:id="@+id/btnActionLogs"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="View"
                android:textSize="14sp"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>

        <!-- Passkey Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_modern"
            android:padding="20dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔐"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passkey Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@string/font_family_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change admin passkey and security settings"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@string/font_family_caption" />
            </LinearLayout>

            <Button
                android:id="@+id/btnPasskeySettings"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Settings"
                android:textSize="14sp"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_secondary"
                android:textColor="@color/text_primary"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>