<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="500dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailAdminUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="admin_username"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailAdminEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="admin@example.com"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Permissions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permissions"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailAdminPermissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FULL_ACCESS"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Created At -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created At"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailAdminCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 01, 2024 12:00:00"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Last Login -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Login"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailAdminLastLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 01, 2024 12:00:00"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailAdminStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
