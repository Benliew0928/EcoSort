<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_md"
    app:cardCornerRadius="@dimen/card_radius_lg"
    app:cardElevation="@dimen/card_elevation_md"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_md"
        android:gravity="center_vertical">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="@dimen/icon_profile_lg"
            android:layout_height="@dimen/icon_profile_lg"
            android:src="@drawable/ic_user_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:contentDescription="Profile picture"
            android:layout_marginEnd="@dimen/margin_lg" />

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="@dimen/text_xl"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_heading" />

            <TextView
                android:id="@+id/textViewUserType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regular_user"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/primary_green"
                android:fontFamily="@string/font_family_caption"
                android:layout_marginTop="@dimen/margin_xs" />

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textSize="@dimen/text_md"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_body"
                android:layout_marginTop="@dimen/margin_xs" />

            <TextView
                android:id="@+id/textViewBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bio"
                android:textSize="@dimen/text_md"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_body"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_xs" />

            <TextView
                android:id="@+id/textViewLastActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_active_today"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:layout_marginTop="@dimen/margin_xs" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_lg">

            <Button
                android:id="@+id/buttonRemove"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_sm"
                android:minHeight="@dimen/button_height_sm"
                android:minWidth="@dimen/icon_profile_lg"
                android:text="@string/remove"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:layout_marginBottom="@dimen/margin_sm" />

            <Button
                android:id="@+id/buttonMessage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_sm"
                android:minHeight="@dimen/button_height_sm"
                android:minWidth="@dimen/icon_profile_lg"
                android:text="@string/message"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/white"
                android:background="@drawable/button_primary"
                android:layout_marginBottom="@dimen/margin_sm" />

            <Button
                android:id="@+id/buttonBlock"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_sm"
                android:minHeight="@dimen/button_height_sm"
                android:minWidth="@dimen/icon_profile_lg"
                android:text="Block"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
