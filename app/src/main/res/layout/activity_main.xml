<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <!-- Content Layer (Bottom) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Spacer for header -->
        <View
            android:id="@+id/headerSpacer"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@android:color/transparent" />

        <!-- Scrollable content -->
        <ScrollView
            android:id="@+id/content_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/bottom_nav_height">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Quick Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_lg"
                    android:background="@color/background_light">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quick_actions"
                        android:textSize="@dimen/text_xxl"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@string/font_family_heading"
                        android:layout_marginBottom="@dimen/margin_lg" />

                    <!-- Action Cards Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Row 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/margin_md">

                            <!-- Scan Item Card -->
                            <LinearLayout
                                android:id="@+id/btnScanContainer"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/action_card_height"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/card_modern"
                                android:gravity="center"
                                android:padding="@dimen/padding_md"
                                android:layout_marginEnd="@dimen/margin_sm"
                                android:elevation="@dimen/card_elevation_md"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="@dimen/icon_xxl"
                                    android:layout_height="@dimen/icon_xxl"
                                    android:src="@drawable/ic_camera"
                                    android:contentDescription="@string/scan_item"
                                    android:layout_marginBottom="@dimen/margin_sm" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/scan_item"
                                    android:textSize="@dimen/text_md"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:fontFamily="@string/font_family_primary"
                                    android:gravity="center" />
                            </LinearLayout>

                            <!-- Find Stations Card -->
                            <LinearLayout
                                android:id="@+id/btnFindStationsContainer"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/action_card_height"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/card_modern"
                                android:gravity="center"
                                android:padding="@dimen/padding_md"
                                android:layout_marginStart="@dimen/margin_sm"
                                android:elevation="@dimen/card_elevation_md"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="@dimen/icon_xxl"
                                    android:layout_height="@dimen/icon_xxl"
                                    android:src="@drawable/ic_location_32"
                                    android:contentDescription="@string/find_stations"
                                    android:layout_marginBottom="@dimen/margin_sm" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/find_stations"
                                    android:textSize="@dimen/text_md"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:fontFamily="@string/font_family_primary"
                                    android:gravity="center" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Row 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/margin_md">

                            <!-- History Card -->
                            <LinearLayout
                                android:id="@+id/btnHistoryContainer"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/action_card_height"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/card_modern"
                                android:gravity="center"
                                android:padding="@dimen/padding_md"
                                android:layout_marginEnd="@dimen/margin_sm"
                                android:elevation="@dimen/card_elevation_md"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="@dimen/icon_xxl"
                                    android:layout_height="@dimen/icon_xxl"
                                    android:src="@drawable/ic_recycle"
                                    android:contentDescription="@string/history"
                                    android:layout_marginBottom="@dimen/margin_sm" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/history"
                                    android:textSize="@dimen/text_md"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:fontFamily="@string/font_family_primary"
                                    android:gravity="center" />
                            </LinearLayout>

                            <!-- Friends Card -->
                            <LinearLayout
                                android:id="@+id/btnFriendsContainer"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/action_card_height"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/card_modern"
                                android:gravity="center"
                                android:padding="@dimen/padding_md"
                                android:layout_marginStart="@dimen/margin_sm"
                                android:elevation="@dimen/card_elevation_md"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="@dimen/icon_xxl"
                                    android:layout_height="@dimen/icon_xxl"
                                    android:src="@drawable/ic_person"
                                    android:contentDescription="@string/friends"
                                    android:layout_marginBottom="@dimen/margin_sm" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/friends"
                                    android:textSize="@dimen/text_md"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:fontFamily="@string/font_family_primary"
                                    android:gravity="center" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Stats Dashboard -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_lg"
                    android:background="@color/background_light">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_impact"
                        android:textSize="@dimen/text_xxl"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@string/font_family_heading"
                        android:layout_marginBottom="@dimen/margin_lg" />

                    <!-- Stats Cards -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_md">

                        <!-- Points Card -->
                        <LinearLayout
                            android:id="@+id/btnPointsContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_modern"
                            android:padding="@dimen/padding_lg"
                            android:layout_marginEnd="@dimen/margin_sm"
                            android:elevation="@dimen/card_elevation_md"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/your_points"
                                android:textSize="@dimen/text_sm"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@string/font_family_caption"
                                android:layout_marginBottom="@dimen/margin_xs" />

                            <TextView
                                android:id="@+id/tvPointsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="@dimen/text_xxxl"
                                android:textStyle="bold"
                                android:textColor="@color/primary_green"
                                android:fontFamily="@string/font_family_heading" />
                        </LinearLayout>

                        <!-- Items Recycled Card -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/card_modern"
                            android:padding="@dimen/padding_lg"
                            android:layout_marginStart="@dimen/margin_sm"
                            android:elevation="@dimen/card_elevation_md">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/items_recycled"
                                android:textSize="@dimen/text_sm"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@string/font_family_caption"
                                android:layout_marginBottom="@dimen/margin_xs" />

                            <TextView
                                android:id="@+id/tvItemsRecycledValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="@dimen/text_xxxl"
                                android:textStyle="bold"
                                android:textColor="@color/primary_green"
                                android:fontFamily="@string/font_family_heading" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Community Feeds Preview -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_lg"
                    android:background="@color/background_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_lg">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/community_feeds"
                            android:textSize="@dimen/text_xxl"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@string/font_family_heading" />

                        <TextView
                            android:id="@+id/tvSeeAllCommunity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/see_all"
                            android:textSize="@dimen/text_md"
                            android:textColor="@color/primary_green"
                            android:fontFamily="@string/font_family_primary"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- Community Posts List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCommunityPosts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false" />

                    <!-- Empty State for Community -->
                    <TextView
                        android:id="@+id/tvEmptyCommunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_community_posts_yet"
                        android:textSize="@dimen/text_md"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@string/font_family_body"
                        android:gravity="center"
                        android:padding="@dimen/padding_xxl"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Fixed Bottom Navigation Bar -->
        <LinearLayout
            android:id="@+id/bottomNavBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_height"
            android:orientation="horizontal"
            android:background="@color/darker_olive"
            android:elevation="8dp"
            android:paddingTop="@dimen/padding_sm"
            android:paddingBottom="@dimen/padding_sm">

            <Button
                android:id="@+id/bottomHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/nav_home"
                android:textSize="@dimen/text_sm"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_secondary"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bottomChat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/nav_chat"
                android:textSize="@dimen/text_sm"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_secondary"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bottomMap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/nav_map"
                android:textSize="@dimen/text_sm"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_secondary"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bottomSell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/nav_community"
                android:textSize="@dimen/text_sm"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_secondary"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <!-- Header Layer (Top) - Drawn LAST so it's on top -->
    <LinearLayout
        android:id="@+id/mainHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_primary"
        android:padding="@dimen/padding_lg"
        android:paddingTop="@dimen/padding_xxl"
        android:elevation="24dp"
        android:translationZ="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_lg">

            <ImageView
                android:layout_width="@dimen/icon_profile_md"
                android:layout_height="@dimen/icon_profile_md"
                android:src="@drawable/app_logo"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_md"
                android:paddingEnd="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_title"
                    android:textSize="@dimen/text_xxxl"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@string/font_family_heading" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_subtitle"
                    android:textSize="@dimen/text_sm"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:fontFamily="@string/font_family_caption" />
            </LinearLayout>

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/icon_xl"
                android:minHeight="@dimen/icon_xl"
                android:text="👤"
                android:textSize="@dimen/text_lg"
                android:background="@color/white"
                android:textColor="@color/primary_green"
                android:paddingStart="@dimen/padding_md"
                android:paddingEnd="@dimen/padding_md" />
        </LinearLayout>

        <!-- Welcome Message with Animation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_sm">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvWelcomeMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_message"
                    android:textSize="@dimen/text_xl"
                    android:textColor="@color/white"
                    android:fontFamily="@string/font_family_primary"
                    android:layout_marginBottom="@dimen/margin_xs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_subtitle"
                    android:textSize="@dimen/text_md"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:fontFamily="@string/font_family_body" />
            </LinearLayout>

            <!-- Green Eco Earth Animation -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieEcoEarth"
                android:layout_width="@dimen/image_emoji_lg"
                android:layout_height="@dimen/image_emoji_lg"
                android:layout_marginStart="@dimen/margin_lg"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_loop="true" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
