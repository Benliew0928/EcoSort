<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <!-- Scrollable content above sticky footer -->
    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavBar"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Modern Header with Gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_primary"
            android:padding="20dp"
            android:paddingTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/app_logo"
                    android:scaleType="fitCenter" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_title"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@string/font_family_heading" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_subtitle"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:alpha="0.9"
                        android:fontFamily="@string/font_family_caption" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="👤"
                    android:textSize="16sp"
                    android:background="@color/white"
                    android:textColor="@color/primary_green"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />
            </LinearLayout>

            <!-- Welcome Message with Animation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWelcomeMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_message"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="@string/font_family_primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_subtitle"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.9"
                        android:fontFamily="@string/font_family_body" />
                </LinearLayout>

                <!-- Green Eco Earth Animation -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieEcoEarth"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="true" />
            </LinearLayout>
        </LinearLayout>

        <!-- Quick Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_actions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_heading"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnScan"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="@string/scan_item"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_primary"
                    android:background="@drawable/button_primary"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/btnFindStations"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="@string/find_stations"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_primary"
                    android:background="@drawable/button_accent"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFriends"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="👥 Friends"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_primary"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btnCommunity"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="@string/community"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_primary"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Stats Dashboard -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_impact"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_heading"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_modern"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="♻️"
                        android:textSize="24sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/items_recycled"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@string/font_family_caption" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green"
                        android:fontFamily="@string/font_family_heading" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardPoints"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_modern"
                    android:padding="16dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐"
                        android:textSize="24sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/points_label"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@string/font_family_caption" />

                    <TextView
                        android:id="@+id/tvPointsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_teal"
                        android:fontFamily="@string/font_family_heading" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Community Feeds -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/community_feeds"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@string/font_family_heading" />

                <TextView
                    android:id="@+id/featuredViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all"
                    android:textSize="14sp"
                    android:textColor="@color/primary_green"
                    android:fontFamily="@string/font_family_primary" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/featuredContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Item Card 1 -->
                    <LinearLayout
                        android:id="@+id/featuredItem1"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_modern"
                        android:padding="16dp"
                        android:layout_marginEnd="12dp"
                        android:elevation="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:text="📻"
                            android:textSize="48sp"
                            android:background="@color/surface_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vintage_radio"
                            android:layout_marginTop="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="850"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/good_condition"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="@string/font_family_caption" />
                    </LinearLayout>

                    <!-- Item Card 2 -->
                    <LinearLayout
                        android:id="@+id/featuredItem2"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_modern"
                        android:padding="16dp"
                        android:layout_marginEnd="12dp"
                        android:elevation="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:text="🏺"
                            android:textSize="48sp"
                            android:background="@color/surface_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/glass_vase"
                            android:layout_marginTop="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="320"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/excellent_condition"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="@string/font_family_caption" />
                    </LinearLayout>

                    <!-- Item Card 3 -->
                    <LinearLayout
                        android:id="@+id/featuredItem3"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_modern"
                        android:padding="16dp"
                        android:elevation="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:text="🖼️"
                            android:textSize="48sp"
                            android:background="@color/surface_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/metal_frame"
                            android:layout_marginTop="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="560"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/like_new"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="@string/font_family_caption" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Sticky Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/background_white"
        android:padding="8dp"
        android:elevation="12dp">

        <Button
            android:id="@+id/bottomHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nav_home"
            android:textSize="12sp"
            android:fontFamily="@string/font_family_primary"
            android:background="@drawable/button_primary"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bottomScan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nav_scan"
            android:textSize="12sp"
            android:fontFamily="@string/font_family_primary"
            android:background="@drawable/button_secondary"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bottomMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nav_map"
            android:textSize="12sp"
            android:fontFamily="@string/font_family_primary"
            android:background="@drawable/button_secondary"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bottomSell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nav_community"
            android:textSize="12sp"
            android:fontFamily="@string/font_family_primary"
            android:background="@drawable/button_secondary"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>