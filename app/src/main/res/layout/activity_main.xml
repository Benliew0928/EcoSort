<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Modern Header with Gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_primary"
            android:padding="20dp"
            android:paddingTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E"
                        android:textColor="@color/primary_green"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@string/font_family_heading" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EcoSort"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@string/font_family_heading" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smart recycling • Marketplace • Community"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:alpha="0.9"
                        android:fontFamily="@string/font_family_caption" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="👤"
                    android:textSize="16sp"
                    android:background="@color/white"
                    android:textColor="@color/primary_green"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />
            </LinearLayout>

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/tvWelcomeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back, User!"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's make the world greener together 🌱"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:alpha="0.9"
                android:fontFamily="@string/font_family_body" />
        </LinearLayout>

        <!-- Quick Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_heading"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnScan"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="📸\nScan Item"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_primary"
                    android:background="@drawable/button_primary"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/btnFindStations"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="🗺️\nFind Stations"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_primary"
                    android:background="@drawable/button_accent"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSell"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="💰\nSell Items"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_primary"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/text_primary"
                    android:layout_marginEnd="8dp"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btnCommunity"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="👥\nCommunity"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_primary"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="8dp"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Stats Dashboard -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Impact"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_heading"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_modern"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="♻️"
                        android:textSize="24sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Items Recycled"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@string/font_family_caption" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green"
                        android:fontFamily="@string/font_family_heading" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_modern"
                    android:padding="16dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💰"
                        android:textSize="24sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Earnings"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@string/font_family_caption" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM 156"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_teal"
                        android:fontFamily="@string/font_family_heading" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Featured Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Featured Items"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@string/font_family_heading" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="14sp"
                    android:textColor="@color/primary_green"
                    android:fontFamily="@string/font_family_primary" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Item Card 1 -->
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_modern"
                        android:padding="16dp"
                        android:layout_marginEnd="12dp"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:text="📻"
                            android:textSize="48sp"
                            android:background="@color/surface_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vintage Radio"
                            android:layout_marginTop="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 120"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good condition"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="@string/font_family_caption" />
                    </LinearLayout>

                    <!-- Item Card 2 -->
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_modern"
                        android:padding="16dp"
                        android:layout_marginEnd="12dp"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:text="🏺"
                            android:textSize="48sp"
                            android:background="@color/surface_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Glass Vase"
                            android:layout_marginTop="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 45"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excellent condition"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="@string/font_family_caption" />
                    </LinearLayout>

                    <!-- Item Card 3 -->
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_modern"
                        android:padding="16dp"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:text="🖼️"
                            android:textSize="48sp"
                            android:background="@color/surface_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Metal Frame"
                            android:layout_marginTop="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 80"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@string/font_family_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Like new"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="@string/font_family_caption" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_white"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:elevation="8dp">

            <Button
                android:id="@+id/bottomHome"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="🏠\nHome"
                android:textSize="12sp"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_primary"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bottomScan"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="📸\nScan"
                android:textSize="12sp"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_secondary"
                android:textColor="@color/text_primary" />

            <Button
                android:id="@+id/bottomMap"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="🗺️\nMap"
                android:textSize="12sp"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_secondary"
                android:textColor="@color/text_primary" />

            <Button
                android:id="@+id/bottomSell"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="💰\nSell"
                android:textSize="12sp"
                android:fontFamily="@string/font_family_primary"
                android:background="@drawable/button_secondary"
                android:textColor="@color/text_primary" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>