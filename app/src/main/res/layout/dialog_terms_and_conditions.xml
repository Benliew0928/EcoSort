<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EcoSort Mobile Application: Terms and Conditions of Use"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@string/font_family_heading"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Effective Date: October 29, 2025"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@string/font_family_body"
            android:layout_marginBottom="16dp" />

        <!-- Terms Content -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_and_conditions_content"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@string/font_family_body"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginBottom="16dp" />

        <!-- Privacy Policy Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EcoSort Mobile Application: Privacy Policy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@string/font_family_heading"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Effective Date: October 29, 2025"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@string/font_family_body"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy_content"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@string/font_family_body"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>

</ScrollView>