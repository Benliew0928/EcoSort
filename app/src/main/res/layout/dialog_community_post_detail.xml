<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="500dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Post ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post ID"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailPostId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Post Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailPostTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Post Title"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Author -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailPostAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author Name"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailPostContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the full content of the community post..."
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Timestamp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted At"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@string/font_family_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailPostTimestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 01, 2024 12:00:00"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@string/font_family_caption"
                android:background="@drawable/edit_text_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Likes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Likes"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@string/font_family_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDetailPostLikes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@string/font_family_caption"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Comments -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@string/font_family_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDetailPostComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@string/font_family_caption"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
