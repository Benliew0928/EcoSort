<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollSell"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".SellActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="20dp">

            <Button
                android:id="@+id/btnBackSell"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="← Back"
                android:textSize="14sp"
                android:background="@drawable/button_secondary"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvSellTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sell an Item"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp" />
        </LinearLayout>

        <!-- Photo Upload Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_modern"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="📷"
                    android:textSize="48sp"
                    android:gravity="center"
                    android:background="@color/surface_light"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to add photo"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take a clear photo of your item"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint" />
            </LinearLayout>
        </LinearLayout>

        <!-- Form Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_modern"
            android:padding="20dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Item Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Title *"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/txtItemName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter item name"
                    android:padding="12dp"
                    android:background="@drawable/input_field"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Price -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price (RM) *"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/txtItemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="0.00"
                    android:padding="12dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_field"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/txtItemDesc"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Describe your item's condition, age, and any special features..."
                    android:padding="12dp"
                    android:gravity="top"
                    android:background="@drawable/input_field"
                    android:textSize="14sp"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:layout_marginBottom="20dp" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnSubmitSell"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="📤 Post Listing"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:textColor="@color/white"
                    android:elevation="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tips Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_modern"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💡 Selling Tips"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Take photos in good lighting\n• Be honest about item condition\n• Research similar items for pricing\n• Respond quickly to buyer messages"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>